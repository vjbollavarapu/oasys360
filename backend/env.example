# Django Backend Environment Variables
# Copy this file to .env and update the values

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,.localhost

# Database Configuration
DATABASE_NAME=oasysdb
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Organization Settings
ORGANIZATION_NAME=OASYS Platform
ORGANIZATION_TYPE=business

# Time Zone
DEFAULT_TIMEZONE=UTC

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Admin Email
ADMIN_EMAIL=admin@oasys.com

# Security Settings (for production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Session Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_AGE=3600
CSRF_COOKIE_SECURE=False
CSRF_COOKIE_HTTPONLY=True

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif
ALLOWED_DOCUMENT_EXTENSIONS=pdf,doc,docx,txt

# PDPA Compliance Settings
PDPA_CONSENT_EXPIRY_DAYS=365
PDPA_DATA_RETENTION_DAYS=2555
PDPA_BREACH_NOTIFICATION_HOURS=72

# Cache Configuration
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache
CACHE_TIMEOUT=300

# AWS S3 Configuration (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# AI/ML Configuration
OPENAI_API_KEY=
GOOGLE_CLOUD_VISION_API_KEY=

# Web3 Configuration
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your-project-id
ETHEREUM_PRIVATE_KEY=

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
