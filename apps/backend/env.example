# Django Backend Environment Variables
# Copy this file to .env and update the values

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
# ALLOWED_HOSTS: In development, supports *.localhost:8000 and *.localhost:3000
# The leading dot (.localhost) allows all subdomains
# Port validation is handled automatically by HostValidationMiddleware
ALLOWED_HOSTS=localhost,127.0.0.1,.localhost

# Database Configuration
DATABASE_NAME=oasysdb
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Organization Settings
ORGANIZATION_NAME=OASYS Platform
ORGANIZATION_TYPE=business

# Time Zone
DEFAULT_TIMEZONE=UTC

# Email Configuration
# For development: Use console backend (emails print to console)
# For production: Use SMTP backend
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@oasys360.com

# Frontend URL (used in email verification links)
FRONTEND_URL=http://localhost:3000

# Admin Email
ADMIN_EMAIL=admin@oasys360.com

# Security Settings (for production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Session Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_AGE=3600
CSRF_COOKIE_SECURE=False
CSRF_COOKIE_HTTPONLY=True

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif
ALLOWED_DOCUMENT_EXTENSIONS=pdf,doc,docx,txt

# PDPA Compliance Settings
PDPA_CONSENT_EXPIRY_DAYS=365
PDPA_DATA_RETENTION_DAYS=2555
PDPA_BREACH_NOTIFICATION_HOURS=72

# Cache Configuration
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache
CACHE_TIMEOUT=300

# Cloudflare R2 Configuration (S3-compatible object storage)
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
CLOUDFLARE_R2_ACCOUNT_ID=
CLOUDFLARE_R2_ACCESS_KEY_ID=
CLOUDFLARE_R2_SECRET_ACCESS_KEY=
CLOUDFLARE_R2_BUCKET_NAME=
CLOUDFLARE_R2_PUBLIC_URL=  # Optional: Custom domain for public access (e.g., https://files.yourdomain.com)
CLOUDFLARE_R2_ENABLE_DIRECT_UPLOAD=True  # Enable direct uploads from Flutter/mobile apps
CLOUDFLARE_R2_SIGNED_URL_EXPIRY=3600  # Signed URL expiry in seconds (default: 1 hour)

# Legacy AWS S3 Configuration (optional, deprecated - use Cloudflare R2 instead)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# AI/ML Configuration
OPENAI_API_KEY=
GOOGLE_CLOUD_VISION_API_KEY=

# AI Engine Service Configuration
AI_ENGINE_URL=https://ai.oasys360.com
AI_ENGINE_API_KEY=your-ai-engine-api-key-here
AI_ENGINE_TIMEOUT=300
# For local development, use: AI_ENGINE_URL=http://localhost:8001

# Web3 Configuration
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your-project-id
ETHEREUM_PRIVATE_KEY=

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
